<html>

<head>
    <title>
        Login Page
    </title>
    <link rel="stylesheet" href="/styles/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
    <div id="logindiv">
        <form method="POST" action="/userlogin">

            <h3>
                <%= "Email-Id" %>
            </h3>

            <input required name="email" placeholder="Enter Your Email-Id">

            <h3>
                <%= "Password" %>
            </h3>

            <input required name="password" type="password" assword placeholder="Enter Your Password">

            <input type="submit" value="Login">
        </form>


        <br>

        <a href="/adminlogin"><button>Admin Login</button></a>

        <a href="http://localhost:3000/forgetPassword">Forget Password</a>
    </div>
</body>

<% if(errorMsg) {%>
    <script>
        alert("<%= errorMsg %>");
    </script>
    <% } %>

</html>