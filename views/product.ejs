<%- include("partials/header", { user:user }) %>

    <div id="main">
        <div id="left">
            <img src="<%=product.filename%>" width="600" height="600">
        </div>

        <div id="right">

            <h1>
                <%= product.name%>
            </h1>
            <h1>Price:-
                <%= product.price%>
            </h1>
            <h2>
                <%=product.description%>
            </h2>

        </div>
    </div>


    <style>
        #main {
            display: flex;
            height: 100%;
            margin: 0px;
            padding: 0px;
        }
        
        #left {
            flex: 1;
            text-align: center;
        }
        
        #right {
            flex: 1;
            margin-top: 50px;
        }
    </style>